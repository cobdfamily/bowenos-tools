#!/usr/bin/env bash
set -euo pipefail

cat <<'USAGE'
Usage: bowenos <command>

Commands:
  create-iso   Build bootstrap ISO
  setup        Create /tmp/bowenos from inventory template
  partition    Apply target disk layout with disko (destructive)
  install      Install NixOS for selected inventory host (/mnt/persist required; run partition first)
  update       Switch system for current host (may mount boot ESPs)
  hardware-scan [DIR]  Generate hardware-configuration.nix in CWD or DIR
USAGE
