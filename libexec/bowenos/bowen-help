#!/usr/bin/env bash
set -euo pipefail

cat <<'USAGE'
Usage: bowenos <command>

Commands:
  create-iso   Build the bootstrap ISO
  setup        Create /tmp/bowenos inventory for a new host
  partition    Partition + create mirrored rpool (destructive)
  install      Run nixos-install for TARGET
  update       Run nixos-rebuild switch for TARGET
  iscsi-check  Validate iSCSI backing devices exist
  hardware-scan  Generate hardware-configuration.nix into repo
USAGE
